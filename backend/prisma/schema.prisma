// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id           String  @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  email        String
  password     String
  profileImage String?
  stockWallet  Json?
}

model RecoveryCode {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  value     Int
  userEmail String
  expires   Int
}

model Stock {
  id                   String  @id @default(auto()) @map("_id") @db.ObjectId
  fullName             String //from external api
  refName              String
  currentValue         Float //from external api
  realValue            Float //from external api
  buyValue             Float
  amount               Int
  dividendYear         Float //from external api
  image                String? //from external api
  category             String
  subcategory          String?
  percentParticipation Float?
  historicalPrice      Json? //from external api 
}
