// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id           String  @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  email        String
  password     String
  profileImage String?
  stockWallet  Json?
}

model RecoveryCode {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  value     Int
  userEmail String
  expires   Int
}

model Stock {
  id                   String @id @default(auto()) @map("_id") @db.ObjectId
  fullName             String
  refName              String
  currentValue         String
  realValue            Float
  buyValue             Float
  amount               Int
  dividendYear         Float
  image                String
  category             String
  percentParticipation Float
  historicalPrice      Json
}
